{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
        "@/*": ["src/*"]
    },
    "types": [
        "vite/client",
        "node",
        /** Element Plus 的 Volar 插件支持 */
        "element-plus/global"
    ]
  },
  "exclude": [
      "node_modules"
  ],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue",
      "types/**/*.d.ts", "vite.config.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
